<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccvn.flashcard_game.views.GamePlayActivity">



    <TextView
        android:id="@+id/tv_score"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_count_question"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:textSize="25sp"
        android:layout_below="@+id/toolbar"
        android:text="@string/question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_question"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="28sp"
        android:layout_below="@+id/tv_count_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_below="@+id/tv_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:id="@+id/image_detail"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/ImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_detail"
        android:layout_alignTop="@+id/image_detail"
        android:layout_alignRight="@+id/image_detail"
        android:layout_alignBottom="@+id/image_detail"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textSize="50sp"
        android:background="@drawable/button_style"
        android:textColor="#000000"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:weightSum="3"
        android:layout_below="@+id/image_detail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="150dp">

        <RadioButton
            android:id="@+id/radio_button_one"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RadioButton
            android:id="@+id/radio_button_two"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RadioButton
            android:id="@+id/radio_button_three"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </RadioGroup>

    <EditText
        android:id="@+id/inputAnswer"
        android:layout_alignLeft="@+id/radio_group"
        android:layout_alignBottom="@+id/radio_group"
        android:layout_marginBottom="40dp"
        android:hint="@string/type_your_answer_here"
        android:background="@drawable/rounded_edittext"
        android:layout_width="210dp"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btn_Submit"
        android:text="Submit"
        android:layout_toRightOf="@+id/inputAnswer"
        android:layout_alignBottom="@+id/radio_group"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/click_button_style"
        android:textColor="#FF4A10"
        android:layout_width="80dp"
        android:layout_height="50dp"/>

    <Button
        android:layout_below="@+id/radio_group"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="@string/nextcard_button"
        android:id="@+id/btn_next_card"
        android:background="@drawable/button_style"
        android:textColor="#FA71CD"
        android:onClick="nextCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
